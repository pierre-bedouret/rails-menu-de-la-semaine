<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Categorie:</strong>
  <%= @recipe.categorie %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @recipe.difficulty_to_human %>
</p>

<p>
  <strong>Prep time:</strong>
  <%= pluralize(@recipe.prep_time, 'minute', plural: 'minutes') %>
</p>

<p>
  <strong>Cooking time:</strong>
  <%= pluralize(@recipe.cooking_time, 'minute', plural: 'minutes') %>
</p>

<p>
  <strong>Ingredients:</strong>
  <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
    <%= recipe_ingredient.ingredient.name %> <%= link_to 'remove', recipe_recipe_ingredient_path(@recipe, recipe_ingredient), method: :delete, data: { confirm: 'Are you sure?' } %> /
  <% end %>
</p>


<%= link_to 'Add an Ingredient', new_recipe_recipe_ingredient_path(@recipe) %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
